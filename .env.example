# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/mindsupport
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/mindsupport?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Stream Chat
STREAM_API_KEY=your-stream-api-key
STREAM_API_SECRET=your-stream-api-secret

# Publishing & Scheduling
PUBLISH_SECRET=your-static-secret-for-scheduled-publish

# Redis (Optional - for multi-instance rate limiting)
REDIS_URL=redis://localhost:6379
# REDIS_URL=redis://:password@redis-host:6379

# Push Notifications (Optional)
PUSH_SERVICE_KEY=your-fcm-server-key-or-onesignal-key

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Admin Access (Optional)
ADMIN_API_KEY=your-admin-api-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com